@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<QuanLyKhachSan.Models.Loaiphong>

@{
    ViewData["Title"] = "QLLP";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1 class="centered-bold-purple">Danh Sách Loại Phòng</h1>

<p style="margin-bottom: 100px;">
    <a asp-action="ThemLoaiPhong">
        <button class="button-purple ">Thêm Loại Phòng</button>
        
    </a>
</p>
<form method="get" action="@Url.Action("QLLP")" class="form-inline">
    <div class="form-group">
        Tìm kiếm theo tên LP: <input type="text" id="tenLP" name="tenLP"
                                     value="@ViewBag.TenLp"
                                     placeholder="Nhập tên loại phòng" />


        <button type="submit" class="btn-purple">Tìm kiếm</button>
    </div>

</form>
<table class="table" style="border: 1px solid black;">
    <thead >
        <tr >
            <th style="border: 1px solid black;">
                Tên Loại Phòng
            </th>
            <th style="border: 1px solid black;">
                Giá Loại Phòng
            </th>
            <th style="border: 1px solid black;">
                Mô tả chi tiết
            </th>
            <th style="border: 1px solid black;"></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
            <td style="border: 1px solid black;">
                @Html.DisplayFor(modelItem => item.TenLp)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.GiaLp)
            </td>
            <td  style="border: 1px solid black;">
                @Html.DisplayFor(modelItem => item.MoTaLp)
            </td>
            <td style="border: 1px solid black;">
                    <a asp-action="SuaLoaiPhong" asp-route-IdLp="@item.IdLp">
                        <button type="button" class="btn-success">Edit</button>
                    </a>
                   
                    <a asp-action="XoaLoaiPhong" asp-route-IdLp="@item.IdLp">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-controller="Admin" asp-action="QLLP">Về trang chủ Quản Lý Loại Phòng</a>
</div>
