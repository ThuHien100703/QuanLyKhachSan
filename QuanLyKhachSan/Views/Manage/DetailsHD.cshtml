@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model QuanLyKhachSan.Models.Hoadon

@{
    ViewData["Title"] = "DetailsHD";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h1 class="centered-bold-purple">Chi Tiết Hóa Đơn</h1>

<div style="background-color: rebeccapurple; color: white; padding: 20px; border-radius: 8px;">
    <h2>Thông Tin Hóa Đơn</h2>
    <hr />
    <dl class="row" style="font-size: 20px;">
        <div class="col-sm-12">
            <div class="row">
                <dt class="col-sm-2">ID_HD</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.IdHd)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2">ID_PTP</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.IdPtp)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2">Thành tiền</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.ThanhTien)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2">Ngày thanh toán</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.NgayThanhToan)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2">Ghi chú</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.GhiChu)</dd>
            </div>
        </div>
    </dl>
</div>
<div>
    <a asp-controller="Manage" asp-action="HoaDon">Về trang chủ Hóa Đơn</a>
</div>
