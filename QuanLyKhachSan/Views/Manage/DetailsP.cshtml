@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model QuanLyKhachSan.Models.Phong

@{
    ViewData["Title"] = "DetailsP";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h1 class="centered-bold-purple">Chi Tiết Phòng</h1>

<div style ="background-color: rebeccapurple; color: white; padding: 20px; border-radius: 8px;">
    <h2> Thông Tin Phòng</h2>  <hr />
    <dl class="row" style="font-size: 20px;">
        <dt class = "col-sm-2">
            Tên Phòng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TenPhong)
        </dd>
        <dt class = "col-sm-2">
           Giá Phòng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GiaP)
        </dd>
        <dt class = "col-sm-2">
           Chi Tiết
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ChiTietP)
        </dd>
        <dt class = "col-sm-2">
            Tình Trạng
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TinhTrang)
        </dd>
        <dt class = "col-sm-2">
            ID_LP
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdLp)
        </dd>
    </dl>
</div>
