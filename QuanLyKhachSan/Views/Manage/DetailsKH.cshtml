@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model QuanLyKhachSan.Models.Khachhang

@{
    ViewData["Title"] = "DetailsKH";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h1 class="centered-bold-purple">Chi Tiết Khách Hàng</h1>

<div style="background-color: rebeccapurple; color: white; padding: 20px; border-radius: 8px;">
    <h2>Thông Tin Khách Hàng</h2>
    <hr />
    <dl class="row" style="font-size: 20px;">
        <div class="col-sm-12">
            <div class="row">
                <dt class="col-sm-3">Họ tên khách hàng</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.HoTenKh)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-3">Ngày Sinh</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NgaySinhKh)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-3">Số CCCD</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SoCccd)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SdtKh)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-3">Email KH</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EmailKh)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-3">Địa chỉ</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DiaChiKh)</dd>
            </div>
        </div>
    </dl>
</div>
<div>
    <a asp-controller="Manage" asp-action="QLKhachHang">Về trang chủ Quản Lý Khách Hàng</a>
</div>