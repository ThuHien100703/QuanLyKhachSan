@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model QuanLyKhachSan.Models.Loaiphong

@{
    ViewData["Title"] = "DetailsLP";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h1 class="centered-bold-purple">Chi Tiết Loại Phòng</h1>

<div style ="background-color: rebeccapurple; color: white; padding: 20px; border-radius: 8px;">
    <h2>Thông Tin Loại Phòng</h2>
    <hr />
    <dl class="row" style="font-size: 20px;">
        <div class="col-sm-12">
            <div class="row">
                <dt class="col-sm-2">ID_LP</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.IdLp)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2">Tên loại phòng</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.TenLp)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2">Giá loại phòng</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.GiaLp)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2">Mô tả</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.MoTaLp)</dd>
            </div>
        </div>
    </dl>
</div>
<div>
    <a asp-controller="Manage" asp-action="QLLoaiPhong">Về trang chủ Quản Lý Loại Phòng</a>
</div>
