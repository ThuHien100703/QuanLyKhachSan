@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model QuanLyKhachSan.Models.Phieuthuephong

@{
    ViewData["Title"] = "DetailsPTP";
    Layout = "~/Views/Shared/_LayoutManage.cshtml";
}

<h1 class="centered-bold-purple">Chi Tiết Phiếu Thuê Phòng</h1>

<div style="background-color: rebeccapurple; color: white; padding: 20px; border-radius: 8px;">
    <h2> Thông Tin Phiếu Thuê Phòng</h2>
    <hr />
    <dl class="row" style="font-size: 20px;">
        <div class="col-sm-12">
            <div class="row">
                <dt class="col-sm-2">ID_PTP</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.IdPtp)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2">ID_KH</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.IdKh)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2">ID_NV</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.IdNv)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2">ID_P</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.IdP)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2" style="white-space: nowrap;">Ngày Thuê Phòng</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.NgayThuePhong)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2">Ngày Trả Phòng</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.NgayTraPhong)</dd>
            </div>
            <div class="row">
                <dt class="col-sm-2">Tổng Tiền Phòng</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.TongTienPhong)</dd>
            </div>
        </div>
    </dl>
    
